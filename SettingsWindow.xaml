<Window x:Class="TTRPG_manager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTRPG_manager"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="{Binding Height}" Width="{Binding Width}" d:DesignWidth="1000" d:DesignHeight="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin="10,50,50,50" Grid.Column="0">
            <TextBlock Text="Resolution:" Margin="0,0,0,10"/>
            <ComboBox x:Name="ResolutionComboBox"
            SelectedValue="{Binding Path=Resolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedValuePath="Content">
                <ComboBoxItem Content="1280x720"/>
                <ComboBoxItem Content="1920x1080"/>
                <ComboBoxItem Content="2560x1440"/>
                <ComboBoxItem Content="3840x2160"/>
            </ComboBox>
            <TextBlock Text="Background Image:" Margin="0,10,0,10"/>
            <TextBlock x:Name="FilePath" Margin="110,-25,0,-10"/>
            <Button Content="Browse" Click="Browse_Click"/>
        </StackPanel>
        <Button Content="OK" Grid.Column="1" Grid.Row ="1" Width="200" Click="ApplyButton_Click"/>
    </Grid>
</Window>
