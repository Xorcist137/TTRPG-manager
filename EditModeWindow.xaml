<Window x:Class="TTRPG_manager.EditModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTRPG_manager"
        mc:Ignorable="d"
        Title="EditModeWindow" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBox x:Name="partyNameTextBox" Width="200" Margin="0,5,0,5"/>
            <Button x:Name="createPartyButton" Content="Create/Save Party" Click="CreatePartyButton_Click" Margin="5"/>
        </StackPanel>

        <ComboBox x:Name="partyComboBox" Grid.Row="1" Margin="10" DisplayMemberPath="Name"/>
        <Button x:Name="CreateCharacterButton" Content="Create New Character" Click="CreateCharacterButton_Click" Grid.Row="2" Margin="10"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <ComboBox x:Name="characterComboBox" Margin="10,10,0,10" Width="170" Visibility="Hidden"></ComboBox>
            <Button x:Name="addCharacterButton" Content="Add" Click="AddCharacterButton_Click" Width="80" Margin="10"/>
            <Button x:Name="removeCharacterButton" Content="Remove" Click="AddCharacterButton_Click" Width="80" Margin="10"/>
            <Button x:Name="deleteCharacterButton" Content="Delete" Click="DeleteCharacterButton_Click" Width="80" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
